@model IEnumerable<Common.ViewModels.PhieuXuatKhoViewModel>
@using Common.Ultil

<div class="col-md-9">
    <!-- Start bordered form -->
    <div class="panel rounded shadow">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title">Thông tin sản phẩm</h3>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.panel-heading -->
        <div class="panel-body no-padding">
            <div class="form-body">
                <div class="table-responsive mb-20">
                    <table class="table table-bordered">
                        <tr>
                            <td>Mã sản phẩm</td>
                            <td>Tên sản phẩm</td>
                            <td>Đơn vị tính</td>
                            <td>Số lượng</td>
                            <td>Giá (VNĐ)</td>
                            <td>Thành tiền (VNĐ)</td>
                        </tr>

                        @foreach (var item in ViewBag.chiTietPhieuXuatKho)
                        {
                            FormatNumber number = new FormatNumber();
                            <tr>
                                <td>@item.maHangHoa</td>
                                <td>@item.tenHangHoa</td>
                                <td>@item.donViTinh</td>
                                <td>@item.soLuong</td>
                                <td>@number.FormatNumbers(@item.gia.ToString())</td>
                                <td>@number.FormatNumbers(@item.thanhTien.ToString())</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-3">
    <div class="panel rounded shadow">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title">Thông tin phiếu xuất kho</h3>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.panel-heading -->
        <div class="panel-body no-padding">
            <form class="form-horizontal form-bordered" role="form">
                <div class="form-body">
                    @foreach (var a in ViewBag.phieuXuatKho)
                    {
                        FormatNumber Number = new FormatNumber();
                        <div class="x_content">
                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Số phiếu</label>
                                <div class="col-sm-8">
                                    <input value="@a.soPhieuXuatKho" type="text" id="soPhieuXuatKho" class="form-control input-sm" disabled="disabled" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password-1" class="col-sm-4 control-label">Ngày lập</label>
                                <div class="col-sm-8">
                                    <input id="ngayXuatKho" value="@a.ngayXuatKho.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control input-sm" />

                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Nhân viên</label>
                                <div class="col-sm-8">
                                    <input value="@a.tenNhanVien" id="tenNhanVien" type="text" class="form-control input-sm" disabled="disabled" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Ghi chú</label>
                                <div class="col-sm-8">
                                    <textarea id="lyDoXuat" placeholder="Ghi chú viết tại đây" class="form-control input-sm">@a.lyDoXuat</textarea>
                                </div>
                            </div>
                            <div class="form-group form-group-divider">
                                <div class="form-inner">
                                    <h4 class="no-margin">Thông tin thanh toán</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Tổng tiền</label>
                                <div class="col-sm-8">
                                    <input id="tongTien" value="@Number.FormatNumbers(@a.tongTien.ToString())" disabled="disabled" type="text" class="form-control input-sm" />

                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="firstname-1" class="col-sm-12 control-label" style="color:red; font-weight: bold;">(*) Lưu ý tiền được tính theo VNĐ</label>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/bootstrap.min.js"></script>