@model IEnumerable<Common.ViewModels.NhanVienViewModel>

@foreach (var item in Model)
{
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Tên Đăng Nhập 
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="nhanviencode" value="@item.nhanVienCode" class="form-control" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Tên Nhân Viên
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="tennhanvien" value="@item.tenNhanVien" class="form-control" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Email
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="email" value="@item.email" class="form-control" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Địa Chỉ
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="diachi" value="@item.diaChi" class="form-control" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Số Điện Thoại
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="sodienthoai" value="@item.soDienThoai" class="form-control" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            CMND
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="cmnd" value="@item.CMND" class="form-control" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Chức Vụ
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            @Html.DropDownList("machucvu", new SelectList(ViewBag.chucvu, "Value", "Text"), new { @class = "form-control", style = "margin-left:5px" })
        </div>
    </div>

    <div class="form-group">

        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Trạng Thái 
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            @Html.DropDownList("trangthai", new SelectList(@ViewBag.data, "Value", "Text"), new { @class = "form-control", style = "margin-left:5px" })
        </div>
    </div>
}