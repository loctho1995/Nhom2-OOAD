@using PagedList.Mvc
@model PagedList.IPagedList<Common.ViewModels.NhanVienViewModel>

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>         
            <th class="width-5">
                @Html.DisplayName("Tên Nhân Viên")
            </th>
            <th class="width-5">
                @Html.DisplayName("Chức Vụ")
            </th>                   
            <th class="width-5">
                @Html.DisplayName("Số Điện Thoại")
            </th>
            <th class="width-5">
                @Html.DisplayName("CMND")
            </th>
            <th class="width-5">
                @Html.DisplayName("Email")
            </th>
            <th class="width-10">
                @Html.DisplayName("Địa Chỉ")
            </th>
            <th class="width-5">
                @Html.DisplayName("Trạng Thái")
            </th>
            <th class="width-5">
                Hành động
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>@item.tenNhanVien</td>
                <td>@item.tenChucVu</td>                         
                <td>@item.soDienThoai</td>
                <td>@item.CMND</td>
                <td>@item.email</td>
                <td>@item.diaChi</td>
                @if (@item.trangThai == true)
                {
                    <td>Đang hoạt động</td>
                }
                else
                {
                    <td>Không hoạt động</td>
                }              
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("Edit", new { id = item.maNhanVien })" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Sửa
                        </a>                                   
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>                  
                   
<div class="pull-left">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</div>
<div class="pull-right">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

<script src="~/Scripts/bootstrap.min.js"></script>

