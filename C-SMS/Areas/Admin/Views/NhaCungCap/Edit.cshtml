@model IList<Common.Models.NhaCungCap>

@{
    ViewBag.Title = "Sửa Nhà Cung Cấp";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}
<link href="~/Content/Css/SonCustomWebgird.css" rel="stylesheet" />

<div class="page-title">
    <div class="title_left">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="x_panel">
    <div class="x_title">
        <h2>Thông Tin Nhà Cung Cấp</h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="main-content">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="row">
                                    @{Html.RenderAction("ThongTinNhaCungCap", "NhaCungCap");}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-5 col-sm-offset-3 ">
                            <input type="submit" value="Sửa Nhà Cung Cấp" class="btn btn-primary" />
                            @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>
