@model IEnumerable<Common.Models.NhaCungCap>


@foreach (var item in Model)
{
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Mã Nhà Cung Cấp <span class="required" style="color:red">*</span>
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
           
            <input type="text" name="manhacungcap" value="@item.MaNhaCungCap" class="form-control" disabled ="disabled"/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Tên Nhà Cung Cấp <span class="required" style="color:red">*</span>
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="tennhacungcap" value="@item.TenNhaCungCap" class="form-control" required="required" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Địa Chỉ <span class="required" style="color:red">*</span>
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="diachi" value="@item.DiaChi" class="form-control" maxlength="100" required="required" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Số Điện Thoại <span class="required" style="color:red">*</span>
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="sodienthoai" value="@item.SoDienThoai" class="form-control" maxlength="15" required="required" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Email <span class="required" style="color:red">*</span>
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="email" value="@item.Email" class="form-control" maxlength="30" required="required" />
        </div>
    </div>  
}
