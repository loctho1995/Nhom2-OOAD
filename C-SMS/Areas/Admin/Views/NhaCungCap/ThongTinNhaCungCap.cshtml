@model IEnumerable<Common.Models.NhaCungCap>


@foreach (var item in Model)
{
    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Mã Nhà Cung Cấp
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="manhacungcap" value="@item.MaNhaCungCap" class="form-control" disabled="disabled" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Tên Nhà Cung Cấp 
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="tennhacungcap" value="@item.TenNhaCungCap" class="form-control" required="required" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Địa Chỉ 
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="diachi" value="@item.DiaChi" class="form-control" maxlength="100" required="required" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Số Điện Thoại 
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="sodienthoai" value="@item.SoDienThoai" class="form-control" maxlength="15" required="required" style="margin-left:5px" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 col-sm-3 col-xs-12">
            Email 
        </label>
        <div class="col-md-10 col-sm-9 col-xs-12">
            <input type="text" name="email" value="@item.Email" class="form-control" maxlength="30" required="required" style="margin-left:5px" />
        </div>
    </div>  
}
