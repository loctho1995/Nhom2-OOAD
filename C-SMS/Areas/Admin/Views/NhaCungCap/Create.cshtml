@{
    ViewBag.Title = "Tạo Nhà Cung Cấp";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}

<link href="~/Content/Css/SonCustomWebgird.css" rel="stylesheet" />
<link href="../../Content/foundation/foundation.css" type="text/css" rel="Stylesheet" />
<link href="../../Content/DataTables-1.9.4/foundation/dataTables.foundation.css" type="text/css" rel="Stylesheet" />
<link rel="stylesheet" href="../../Content/foundation/foundation_icons_general/stylesheets/general_foundicons.css">

<div class="page-title">
    <div class="title_left">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div>
    <div class="x_panel">
        <div class="x_title">
            <h2>Thông Tin Nhà Cung Cấp</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Html.BeginForm("Create", "NhaCungCap", FormMethod.Post))
            {

                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-3 col-xs-12">
                            Tên Nhà Cung Cấp <span class="required" style="color:red">*</span>
                        </label>
                        <div class="col-md-10 col-sm-9 col-xs-12">
                          
                            <input type="text" name="tennhacungcap" class="form-control" required="required" maxlength="50"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-3 col-xs-12">
                            Địa Chỉ <span class="required" style="color:red">*</span>
                        </label>
                        <div class="col-md-10 col-sm-9 col-xs-12">
                            <input type="text" name="diachi" class="form-control" required="required" maxlength="100" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-3 col-xs-12">
                            Email <span class="required" style="color:red">*</span>
                        </label>
                        <div class="col-md-10 col-sm-9 col-xs-12">
                            <input type="text" name="email" class="form-control" required="required" maxlength="30"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-3 col-xs-12">
                            Số Điện Thoại <span class="required" style="color:red">*</span>
                        </label>
                        <div class="col-md-10 col-sm-9 col-xs-12">
                            <input type="text" name="sodienthoai" class="form-control" required="required" maxlength="15"/>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-md-offset-5 col-sm-offset-3 ">
                            <input type="submit" value="Lưu Nhà Cung Cấp" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>
