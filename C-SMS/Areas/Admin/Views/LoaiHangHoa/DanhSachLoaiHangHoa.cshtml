@using PagedList.Mvc
@model PagedList.IPagedList<Common.ViewModels.LoaiHangHoaViewModel>

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th class="width-5">
                @Html.DisplayName("Mã Loại Hàng Hóa")
            </th>
            <th class="width-5">
                @Html.DisplayName("Tên Loại Hàng Hóa")
            </th>
            <th class="width-5">
                @Html.DisplayName("Phần Trăm Lợi Nhuận (%)")
            </th>
            <th class="width-5">
                Hành động
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>@item.maLoaiHangHoa</td>
                <td>@item.tenLoaiHangHoa</td>
                <td>@item.phanTramLoiNhuan</td>             
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("Edit", new { id = item.maLoaiHangHoa })" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Sửa
                        </a>

                        <a href="@Url.Action("Delete", new { id = item.maLoaiHangHoa })" class="btn btn-default">
                            <i class="fa fa-remove" aria-hidden="true"></i> Xóa
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pull-left">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
</div>
<div class="pull-right">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

<script src="~/Scripts/bootstrap.min.js"></script>

