@model IEnumerable<Common.ViewModels.PhieuDatHangViewModel>

@{
    ViewBag.Title = "Xác nhận phiếu đặt hàng";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}

<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i>Phiếu Đặt Hàng</h2>
        <div class="breadcrumb-wrapper hidden-xs">

            @using(Html.BeginForm("XacNhanNhanHang", "DatHang"))
            {
                <button class="btn btn-sm btn-success btn-xs btn-push">
                    <i class="fa fa-eye"></i> Xác nhận phiếu đặt hàng
                </button>
            }

        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="alert alert-danger fade in">
                <span><i class="fa fa-bullhorn"></i>Bạn muốn xác nhận khách hàng đã nhận hàng?</span>
            </div>

            @{Html.RenderAction("ThongTinPhieuDatHang", "DatHang");}
        </div>

    </div>
</section>