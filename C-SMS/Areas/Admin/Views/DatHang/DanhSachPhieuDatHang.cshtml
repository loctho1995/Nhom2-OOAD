@using PagedList.Mvc
@model PagedList.IPagedList<Common.ViewModels.PhieuDatHangViewModel>
@using Common.Ultil
<script src="~/Scripts/Tho/phieudathangScripts.js"></script>

<table class="table table-bordered table-middle table-lilac">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Số Phiếu")
            </th>
            <th>
                @Html.DisplayName("Ngày đặt")
            </th>
            <th>
                @Html.DisplayName("Tên Khách hàng")
            </th>
            <th>
                @Html.DisplayName("Số điện thoại")
            </th>
            <th>
                @Html.DisplayName("Tổng tiền")
            </th>
            <th>
                @Html.DisplayName("Hình thức thanh toán")
            </th>
            <th>
                @Html.DisplayName("Trạng thái nhận hàng")
            </th>
            <th>
                @Html.DisplayName("Trạng thái thanh toán")
            </th>
            <th class="width-10">
                Hành động
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            FormatNumber number = new FormatNumber();
            <tr style="text-align:center">
                <td>@item.soPhieuDatHang</td>
                <td>@item.ngayDat.ToString("dd/MM/yyyy")</td>
                <td>@item.tenKhachHang</td>
                <td>@item.soDienThoai</td>
                <td>@number.FormatNumbers(@item.tongTien.ToString())</td>
                <td>@item.hinhThucThanhToan</td>
                @if(@item.daXacNhan == true)
                {
                    <td>Đã nhận hàng</td>
                }
                else
                {
                    <td>
                        <div onclick='onBtNhanHangClicked(this, @item.soPhieuDatHang)' class='btn btn-default'>
                            Xác nhận
                        </div>
                    </td>
                }

                @if(@item.daThanhToan == true)
                {
                    <td>
                        Đã thanh toán
                    </td>
                }
                else
                {
                    <td>
                        <div onclick='onBtThanhToanClicked(this, @item.soPhieuDatHang)' class='btn btn-default'>
                            Xác nhận
                        </div>
                    </td>
                }

                <td>
                    <a href="@Url.Action("Detail", new { id = item.soPhieuDatHang })" class="btn btn-sm btn-success btn-xs btn-push"><i class="fa fa-eye"></i> Xem</a>
                    <a href="@Url.Action("Delete", new { id = item.soPhieuDatHang })" class="btn btn-sm btn-danger btn-xs btn-push"><i class="fa fa-trash"></i> Hủy</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="pull-left" style="padding-top:20px">
    <h3 class="panel-title">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</h3>
</div>
<div class="pull-right">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>