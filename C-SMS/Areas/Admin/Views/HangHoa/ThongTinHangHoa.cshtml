@model IEnumerable<Common.ViewModels.HangHoaViewModel>
@using Common.Ultil

@foreach (var item in Model)
{
    FormatNumber number = new FormatNumber();
    <div class="form-group">
        <label>Tên sản phẩm</label>
        <input type="text" name="tenhanghoa" value="@item.tenHangHoa" class="form-control rounded" />
    </div>

    <div class="form-group">
        <label>Model</label>
        <input type="text" name="modelname" value="@item.modelName" class="form-control rounded"  />
    </div>

    <div class="form-group">
        <label>Giá bán</label>
        <input type="text" name="giaban" value="@item.giaBan" class="form-control rounded"  />
    </div>

    <div class="form-group">
        <label>Giảm giá</label>
        <input type="text" name="giamgia" value="@item.giamGia" class="form-control rounded" />
    </div>

    <div class="form-group">
        <label>Số lượng tồn</label>
        <input type="text" name="soluongton" value="@item.soLuongTon" class="form-control rounded"  />
    </div>

    <div class="form-group">
        <label>Đơn vị tính</label>
        <input type="text" value="@item.donViTinh" class="form-control rounded"  />
    </div>

    <div class="form-group">
        <label>Xuất xứ</label>
        <input type="text" name="xuatxu" value="@item.xuatXu" class="form-control rounded" />
    </div>

    <div class="form-group">
        <label>Thời gian bảo hành (Tháng)</label>
        <input type="text" name="thoigianbaohanh" value="@item.thoiGianBaoHanh" class="form-control rounded"  />
    </div>

    <div class="form-group">
        <label>Loại sản phẩm</label>
        @Html.DropDownList("maloaihanghoa", new SelectList(ViewBag.loaihanghoa, "Value", "Text"), new { @class = "form-control rounded" })
    </div>


    <div class="form-group">
        <label>Hình Ảnh</label>
        <div class="fileinput fileinput-new" data-provides="fileinput">
            <div class="fileinput-preview thumbnail" name="hinhanh" data-trigger="fileinput" style="width: 200px; height: 150px;">
                <img src="~/Content/client/product/@item.hinhAnh" style="width: 200px; height: 150px;">
            </div>
            <div>
                <span class="btn btn-info btn-file">
                    <span class="fileinput-new">Chọn hình ảnh</span><span class="fileinput-exists">Thay đổi</span>
                    <input type="file" name="hinhanh" id="fileUpload">
                    <input type="hidden" id="file" name="hinhanh" class="form-control" style="margin-left:5px">
                </span>
                <a href="#" class="btn btn-danger fileinput-exists" data-dismiss="fileinput">Xóa</a>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>
            Thông Số Kỹ Thuật
        </label>

        <div class="form-group">
            <textarea id="thongsokythuat" name="thongsokythuat" class="form-control rounded" rows="10" >@item.thongSoKyThuat</textarea>
        </div>
    </div>

    <div class="form-group">
        <label>
            Mô Tả
        </label>

        <div class="form-group">
            <textarea id="mota" name="mota" class="form-control rounded" rows="10">@item.moTa</textarea>
        </div>
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        @Html.DropDownList("trangthai", new SelectList(@ViewBag.data, "Value", "Text"), new { @class = "form-control rounded" })
    </div>
}

<script src="~/Content/assets/ckeditor/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        CKEDITOR.replace('mota', { filebrowserBrowseUrl: '#' });
        CKEDITOR.replace('thongsokythuat', { filebrowserBrowseUrl: '#' });
    });
</script>