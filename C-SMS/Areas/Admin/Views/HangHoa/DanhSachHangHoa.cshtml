@using PagedList.Mvc
@model PagedList.IPagedList<Common.ViewModels.HangHoaViewModel>
@using Common.Ultil

<br />
<table class="table table-bordered table-middle table-lilac">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tên Hàng Hóa")
            </th>
            <th>
                @Html.DisplayName("Giá Bán")
            </th>
            <th>
                @Html.DisplayName("Mô Tả")
            </th>
            <th>
                @Html.DisplayName("Xuất Xứ")
            </th>
            <th class="width-5">
                Hành động
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            FormatNumber number = new FormatNumber();
            <tr style="text-align:center">
                <td>@item.tenHangHoa</td>
                <td>@number.FormatNumbers(@item.giaBan.ToString())</td>
                <td>@item.moTa</td>
                <td>@item.xuatXu</td>

                <td>
                    <a href="@Url.Action("ViewInfo", new { id = item.maHangHoa })" class="btn btn-sm btn-success btn-xs btn-push"><i class="fa fa-eye"></i> Xem</a>
                    <a href="@Url.Action("Edit", new { id = item.maHangHoa })" class="btn btn-sm btn-primary btn-xs btn-push"><i class="fa fa-pencil"></i> Sửa</a>
                    <a href="@Url.Action("Delete", new { id = item.maHangHoa })" class="btn btn-sm btn-danger btn-xs btn-push"><i class="fa fa-trash"></i> Hủy</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="pull-left" style="padding-top:20px">
    <h3 class="panel-title">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</h3>
</div>
<div class="pull-right">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>