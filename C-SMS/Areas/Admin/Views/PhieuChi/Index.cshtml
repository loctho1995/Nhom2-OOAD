@model IEnumerable<Common.ViewModels.PhieuChiViewModel>
    @using Common.ViewModels
    @{
        ViewBag.Title = "Danh Sách Phiếu Chi";
        Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
    }

    <link href="~/Content/Css/SonCustomWebgird.css" rel="stylesheet" />
    <link href="../../Content/foundation/foundation.css" type="text/css" rel="Stylesheet" />
    <link href="../../Content/DataTables-1.9.4/foundation/dataTables.foundation.css" type="text/css" rel="Stylesheet" />
    <link rel="stylesheet" href="../../Content/foundation/foundation_icons_general/stylesheets/general_foundicons.css">
    <script src="~/Scripts/bootstrap.min.js"></script>

    <div class="page-title">
        <div class="title_left">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="pull-right">
            <button class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Create", "NhapKho") + "'"); ">
                <i class="glyphicon glyphicon-chevron-right"></i>
                Tạo phiếu chi
            </button>
        </div>
    </div>

    <div>
        <div class="x_panel">
            <div class="x_content">
                @using (Ajax.BeginForm("DanhSachPhieuChi", "PhieuChi", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }, new { id = "filter_div" }))
                {
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label">Từ ngày</label>
                            <input type="date" id="dateFrom" name="dateFrom" data-date-format="dd/mm/yyyy" required class="form-control rounded" />
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Đến ngày</label>
                            <div class="input-group">
                                <input type="date" id="dateTo" name="dateTo" required class="form-control rounded" />
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                }

                @using (Ajax.BeginForm("DanhSachPhieuChi", "PhieuChi", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }, new { id = "filter_div" }))
                {
                    <div class="col-md-12 col-sm-6 col-xs-12">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <label>Trạng thái</label>
                            @Html.DropDownList("trangthai", new SelectList(ViewBag.trangthai, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label">Tìm Kiếm</label>
                            <div class="input-group">
                                @Html.TextBox("SearchString", null, new { @class = "form-control", @placeholder = "Tìm kiếm", @aria_describedby = "basic-addon2" })
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                }
                <div id="list">
                    @{Html.RenderAction("DanhSachPhieuChi", "PhieuChi");}
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#dateFrom').change(function () {
            $('#filter_div').submit();
        });

        $('#dateTo').change(function () {
            $('#filter_div').submit();
        });
    </script>
