@model IEnumerable<Common.ViewModels.PhieuChiViewModel>
    @using Common.Ultil

    <div class="col-md-4 col-sm-12 col-xs-12">
        <div class="x_title">
            <h2><small>Thông tin phiếu chi</small></h2>
            <div class="clearfix"></div>
        </div>
        @foreach (var a in ViewBag.phieuChi)
        {
            FormatNumber Number = new FormatNumber();
            <div class="x_content">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Số phiếu</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <input value="@a.soPhieuChi" type="text" id="soPhieuChi" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Ngày</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <input id="ngayNhapKho" value="@a.ngayChi.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Nhân viên</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <input value="@a.tenNhanVien" id="tenNhanVien" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                        </div>
    </div>
                </div>

                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Mã Phiếu Nhập</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <input value="@a.maPhieuNhap" id="maPhieuNhap" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Ghi chú</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <textarea class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%">@a.ghiChu</textarea>
                        </div>
                    </div>
                </div>
            </div>


    <!--Thông tin thanh toán-->
            <div class="x_title">
                <h2><small>Thông tin thanh toán</small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Tổng Tiền</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <input id="tongTien" value="@Number.FormatNumbers(@a.tongTienChi.ToString())" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-sm-12 col-xs-12" style="margin-left:0%">
                    <label class="control-label col-md-12 col-sm-2 col-xs-12" style="color:red">(*) Lưu ý tiền được tính theo VNĐ</label>
                </div>
            </div>
    <!--/Thông tin thanh toán-->
        }
    </div>
