@model Common.ViewModels.PhieuChiViewModel
@{
    ViewBag.Title = "Tạo Phiếu Chi";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}

<link href="~/Content/Css/InventoryBallotCss.css" rel="stylesheet" />
<link href="~/Content/Css/Webgird.css" rel="stylesheet" />

<div class="header">
    <div class="col-sm-4 no-padding-left">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="pull-right">
        <button class="btn btn-primary" id="submit"><i class="glyphicon glyphicon-ok"></i> Lưu</button>
        <button class="btn btn-primary" id="print"><i class="glyphicon glyphicon-print"></i> In</button>
        <button class="btn btn-dark" onclick="@("window.location.href='" + @Url.Action("Index", "NhapKho") + "'"); "><i class="glyphicon glyphicon-arrow-left"></i> Quay lại </button>
    </div>
</div>


    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="row">
                    <div class="col-md-4 col-sm-12 col-xs-12">
                        <div class="x_title">
                            <h2><small>Thông tin phiếu chi</small></h2>
                            <div class="clearfix"></div>
                        </div>
                        @using (Html.BeginForm("Create", "PhieuChi", FormMethod.Post))
                        {
                        <div class="x_content">
                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Số phiếu</label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <input value="8" type="number" name="sophieuchi" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" readonly="true" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Ngày</label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <input name="ngaychi" value="@DateTime.Now.ToString(" dd/MM/yyyy")" readonly="true" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Nhân viên</label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <input value="@ViewBag.tenNhanVien" name="tenNhanVien" id="tenNhanVien" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" readonly="true" />
                                        <input value="@ViewBag.maNhanVien" name="manhanvien" id="maNhanVien" type="hidden" class="form-control" style="width:200px" readonly="true" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Phiếu Lập</label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownList("maphieunhap", new SelectList(ViewBag.maPhieuNhap, "Value", "Text"), new { @id = "maphieunhap", @class = "form-control", @style = "width:120%" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Ghi Chú</label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <textarea id="ghiChu" name="ghiChu" placeholder="Ghi chú viết tại đây" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%"></textarea>
                                    </div>
                                </div>
                            </div>

                            <!--Thông tin thanh toán-->
                            <div class="x_title">
                                <h2><small>Thông tin thanh toán</small></h2>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Tổng Tiền</label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <input id="tongTien" name="tongTienChi" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-sm-12 col-xs-12" style="margin-left:0%">
                                    <label class="control-label col-md-12 col-sm-2 col-xs-12" style="color:red">(*) Lưu ý tiền được tính theo VNĐ</label>
                                </div>
                                <button id="formphieuchi" type="submit" hidden="hidden"></button>
                            </div>
                            <!--/Thông tin thanh toán-->
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
<script type="text/javascript">
    $(function () {
        $('#submit').click(function () {
            console.log("submit")
            $('#formphieuchi').click();
        })
    })

    $(function () {
        $('#maphieunhap').change(function () {
            console.log("abc")
            $.getJSON('/PhieuChi/LayTongTienPhieuNhap', { id: $('#maphieunhap').val() }, function (data) {
                $.each(data, function (i, row) {
                    $('#tongTien').val(row.TongTien)
                });
            });

        });
    });
</script>
