@model IEnumerable<Common.ViewModels.PhieuChiViewModel>

    @{
        ViewBag.Title = "Hủy Phiếu Chi";
        Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
    }

    <link href="~/Content/Css/Webgird.css" rel="stylesheet" />
    <section id="page-content">
        <div class="header-content">
            <h2><i class="fa fa-list-alt"></i>Phiếu Chi</h2>
        </div>
        <div class="body-content animated fadeIn">
            <div class="row">
                <div class="alert alert-danger fade in">
                    <span><i class="fa fa-bullhorn" style="padding-right: 7px" aria-hidden="true"></i>Bạn có chắc chắn muốn hủy?</span>
                </div>

                <br />
                <section id="page-content">

                    <div class="body-content animated fadeIn">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Start input fields - basic form -->
                                <div class="panel rounded shadow">
                                    <div class="panel-body no-padding">
                                        <div class="form-horizontal">
                                            <div class="row">
                                                <div class="col-md-12 col-sm-12 col-xs-12">
                                                    <div class="x_panel">
                                                        <div class="row">
                                                            @{Html.RenderAction("ThongTinPhieuChi", "PhieuChi");}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @using (Html.BeginForm("Delete", "PhieuChi"))
                            {
                                <div class="form-group">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="btn btn-dark" onclick="@("window.location.href='" + @Url.Action("Index", "PhieuChi") + "'"); "><i class="glyphicon glyphicon-arrow-left"></i> Quay lại </div>
                                        <button class="btn btn-primary" id="submit"><i class="glyphicon glyphicon-remove"></i> Hủy Phiếu Chi</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
            </div>
        </div>
    </section>
