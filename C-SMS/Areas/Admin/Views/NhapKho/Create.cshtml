@model Common.ViewModels.PhieuNhapKhoViewModel
@{
    ViewBag.Title = "Tạo Phiếu Nhập Kho";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}

<link href="~/Content/Css/InventoryBallotCss.css" rel="stylesheet" />
<link href="~/Content/Css/Webgird.css" rel="stylesheet" />
<link href="~/Content/Css/SonCustomWebgird.css" rel="stylesheet" />
<script src="~/Scripts/Son/phieunhapkhoScripts.js"></script>

<div class="header">
    <div class="col-sm-4 no-padding-left">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="pull-right">
        <button class="btn btn-primary" id="submit"><i class="glyphicon glyphicon-ok"></i> Lưu</button>
        <button class="btn btn-primary" id="print"><i class="glyphicon glyphicon-print"></i> In</button>
        <button class="btn btn-dark" onclick="@("window.location.href='" + @Url.Action("Index", "NhapKho") + "'"); "><i class="glyphicon glyphicon-arrow-left"></i> Quay lại </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="row">
                <div class="col-md-8 col-sm-12 col-xs-12">
                    <div class="x_title">
                        <h2><small>Thông tin sản phẩm</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="details">
                            <div class="row col-lg-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <input id="maHangHoa" list="listProduct" type="text" class="form-control dropdownlist col-md-12 col-xs-12" placeholder="Nhập mã sản phẩm để tìm kiếm..." style="width:100%" onblur="HideErrorMaHangHoa()">
                                        <datalist id="listProduct">
                                            @foreach (var item in ViewBag.danhSachHangHoa)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </datalist>
                                        <span class="error">Nhập mã hàng hóa</span>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-responsive" style="width:100%">
                                <tr>
                                    <td>Sản Phẩm</td>
                                    <td>Đơn Vị Tính</td>
                                    <td>Số Lượng Nhập</td>
                                    <td>Giá Nhập</td>
                                    <td>Thành Tiền</td>
                                    <td></td>
                                </tr>

                                <tr class="mycontainer" id="mainrow">
                                    <td>
                                        <input id="tenHangHoa" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:100%" />
                                        <span class="error">Chưa có hàng hóa</span>
                                    </td>

                                    <td>
                                        <input type="text" id="donViTinh" class="form-control" style="width:100%" disabled="disabled" />
                                    </td>
                                    <td>
                                        <input type="text" id="soLuongNhap" class="form-control" style="width:100%" oninput="HideErrorSoLuongNhap()" onkeypress="return checkNumber(event, this)" maxlength="4" />
                                        <span class="error">Nhập số lượng</span>
                                    </td>
                                    <td>
                                        <input type="text" id="giaNhap" class="form-control" style="width:100%" oninput="HideErrorGiaNhap()" onkeypress="return checkNumber(event, this)" />
                                        <span class="error">Nhập giá</span>
                                    </td>
                                    <td>
                                        <input type="text" id="thanhTien" disabled="disabled" class="form-control" style="width:100%"  />
                                    </td>
                                    <td>
                                        <input type="button" id="add" value="Thêm" style="padding:3px 20px; margin-top:2%" class="btn btn-success" />
                                    </td>
                                </tr>
                            </table>

                            <div id="orderItems" class="tablecontainer"></div>
                            <div id="Items" hidden class="table-responsive"></div>
                            <input value="@ViewBag.maNhanVien" id="maNhanVien" type="hidden" class="form-control" style="width:200px" disabled="disabled" />
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-12 col-xs-12">
                    <div class="x_title">
                        <h2><small>Thông tin phiếu nhập kho</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Số phiếu</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <input value="@ViewBag.soPhieuNhapKhoTuTang" type="text" id="soPhieuNhapKho" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Ngày</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <input id="ngayNhapKho" value="@DateTime.Now.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Nhân viên</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <input value="@ViewBag.tenNhanVien" id="tenNhanVien" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Nhà cung cấp</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    @Html.DropDownList("nhacungcap", new SelectList(ViewBag.nhaCungCap, "Value", "Text"), new { @class = "form-control", @style = "width:120%" })
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Ghi Chú</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <textarea id="ghiChu" placeholder="Ghi chú viết tại đây" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--Thông tin thanh toán-->
                    <div class="x_title">
                        <h2><small>Thông tin thanh toán</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Tổng Tiền</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <input id="tongTien" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12" style="margin-left:0%">
                            <label class="control-label col-md-12 col-sm-2 col-xs-12" style="color:red">(*) Lưu ý tiền được tính theo VNĐ</label>
                        </div>
                    </div>
                    <!--/Thông tin thanh toán-->
                </div>
            </div>
        </div>
    </div>
</div>