@model IEnumerable<Common.ViewModels.KiemKhoViewModel>

<div class="col-md-8 col-sm-12 col-xs-12">
    <div class="x_title">
        <h2><small>Thông tin sản phẩm</small></h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="details">

            <table class="table table-responsive">
                <tr>
                    <td>Sản Phẩm</td>
                    <td>Đơn giá</td>
                    <td>Số lượng</td>
                    <td>Thành tiền</td>
                </tr>

                @foreach(var item in ViewBag.chiTietPhieuBanHang)
                {
                    <tr>
                        <td>@item.tenHangHoa</td>
                        <td>@item.gia</td>
                        <td>@item.soLuong</td>
                        <td>@item.thanhTien</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="col-md-4 col-sm-12 col-xs-12">
    <div class="x_title">
        <h2><small>Thông tin phiếu bán hàng</small></h2>
        <div class="clearfix"></div>
    </div>

    @foreach(var a in ViewBag.phieuBanHang)
    {
        <div class="x_content">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Tên khách hàng</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input id="tenKhachHang" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" value="@a.tenKhachHang" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Số điện thoại</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input id="soDienThoai" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" value="@a.soDienThoai" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Số phiếu</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input value="@a.soPhieuBanHang" type="text" id="soPhieuKiemKho" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Ngày</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input id="ngayKiemKho" value="@a.ngayBan.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Nhân viên</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input value="@a.tenNhanVien" id="tenNhanVien" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Ghi chú</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <textarea id="ghiChu" placeholder="Ghi chú tại đây" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="x_title">
            <h2><small>Thông tin thanh toán</small></h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Tổng tiền</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input id="tongTien" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" value="@a.tongTien" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>



