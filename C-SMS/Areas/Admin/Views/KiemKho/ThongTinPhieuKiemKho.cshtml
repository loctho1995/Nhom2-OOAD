@model IEnumerable<Common.ViewModels.KiemKhoViewModel>

<div class="col-md-8 col-sm-12 col-xs-12">
    <div class="x_title">
        <h2><small>Thông tin sản phẩm</small></h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="details">

            <table class="table table-responsive">
                <tr>
                    <td>Mã Sản Phẩm</td>
                    <td>Tên Sản Phẩm</td>
                    <td>Đơn Vị Tính</td>
                    <td>Số Lượng Đang Có</td>
                    <td>Số Lượng Kiểm Tra</td>
                    <td></td>
                </tr>

                @foreach (var item in ViewBag.chiTietPhieuKiemKho)
                {
                    <tr>
                        <td>@item.maHangHoa</td>
                        <td>@item.tenHangHoa</td>
                        <td>@item.donViTinh</td>
                        <td>@item.soLuongHienTai</td>
                        <td>@item.soLuongKiemTra</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="col-md-4 col-sm-12 col-xs-12">
    <div class="x_title">
        <h2><small>Thông tin phiếu kiểm kho</small></h2>
        <div class="clearfix"></div>
    </div>
    @foreach (var a in ViewBag.phieuKiemKho)
    {
        <div class="x_content">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Số phiếu</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input value="@a.soPhieuKiemKho" type="text" id="soPhieuKiemKho" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Ngày</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input id="ngayKiemKho" value="@a.ngayKiemKho.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Nhân viên</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <input value="@a.tenNhanVien" id="tenNhanVien" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12">Ghi chú</label>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <textarea class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%">@a.ghiChu</textarea>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



