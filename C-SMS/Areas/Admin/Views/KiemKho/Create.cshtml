@model Common.ViewModels.KiemKhoViewModel
@{
    ViewBag.Title = "Tạo Phiếu Kiểm Kho";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}

<link href="~/Content/Css/InventoryBallotCss.css" rel="stylesheet" />
<link href="~/Content/Css/Webgird.css" rel="stylesheet" />
<link href="~/Content/Css/SonCustomWebgird.css" rel="stylesheet" />
<script src="~/Scripts/Son/phieukiemkhoScripts.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="header">
    <div class="col-sm-4 no-padding-left">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="pull-right">
        <button class="btn btn-primary" id="submit"><i class="glyphicon glyphicon-ok"></i> Lưu</button>
        <button class="btn btn-primary" id="print"><i class="glyphicon glyphicon-print"></i> In</button>
        <button class="btn btn-dark" onclick="@("window.location.href='" + @Url.Action("Index", "KiemKho") + "'"); "><i class="glyphicon glyphicon-arrow-left"></i> Quay lại </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="row">
                <div class="col-md-8 col-sm-12 col-xs-12">
                    <div class="x_title">
                        <h2><small>Thông tin sản phẩm</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="details">
                            <div class="row col-lg-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <input id="maHangHoa" list="listProduct" type="text" class="form-control dropdownlist col-md-12 col-xs-12" placeholder="Nhập mã sản phẩm để tìm kiếm..." style="width:100%">
                                        <datalist id="listProduct">
                                            @foreach (var item in ViewBag.danhSachHangHoa)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </datalist>
                                        <span class="error">Nhập mã hàng hóa</span>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-responsive" style="width:100%">
                                <tr>
                                    <td>Sản Phẩm</td>
                                    <td>Đơn Vị Tính</td>
                                    <td>Số Lượng Đang Có</td>
                                    <td>Số Lượng Kiểm Tra</td>
                                    <td></td>
                                </tr>

                                <tr class="mycontainer" id="mainrow">
                                    <td>
                                        <input id="tenHangHoa" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:100%" onblur="HideErrorProductName()" />
                                        <span class="error">Không tìm thấy hàng hóa</span>
                                    </td>

                                    <td>
                                        <input type="text" id="donViTinh" class="form-control" style="width:100%" disabled="disabled" />
                                    </td>
                                    <td>
                                        <input type="text" id="soLuongHienTai" class="form-control" style="width:100%" disabled="disabled" />
                                    </td>
                                    <td>
                                        <input type="text" id="soLuongKiemTra" class="form-control" style="width:100%" oninput="checkQuantity()" onkeypress="    return checkNumber(event, this)" maxlength="4" />
                                        <span class="error">Yêu cầu nhập số lượng</span>
                                    </td>
                                    <td>
                                        <input type="button" id="add" value="Thêm" style="padding:3px 20px; margin-top:2%" class="btn btn-success" />
                                    </td>
                                </tr>
                            </table>

                            <div id="orderItems" class="tablecontainer">

                            </div>
                            <div id="Items" hidden class="table-responsive"></div>
                            <input value="@ViewBag.maNhanVien" id="maNhanVien" type="hidden" class="form-control" style="width:200px" disabled="disabled" />
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-12 col-xs-12">
                    <div class="x_title">
                        <h2><small>Thông tin phiếu kiểm kho</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Số phiếu</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <input value="@ViewBag.soPhieuKiemKhoTuTang" type="text" id="soPhieuKiemKho" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Ngày</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <input id="ngayKiemKho" value="@DateTime.Now.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Nhân viên</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <input value="@ViewBag.tenNhanVien" id="tenNhanVien" type="text" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%" disabled="disabled" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12">Ghi chú</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <textarea id="ghiChu" placeholder="Ghi chú tại đây" class="form-control col-md-12 col-sm-12 col-xs-12" style="width:120%"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
