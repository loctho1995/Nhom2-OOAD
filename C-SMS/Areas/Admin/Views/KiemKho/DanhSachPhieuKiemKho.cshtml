@using PagedList.Mvc
@model PagedList.IPagedList<Common.ViewModels.KiemKhoViewModel>

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th >
                @Html.DisplayName("Số Phiếu Kiểm Kho")
            </th>
            <th >
                @Html.DisplayName("Ngày kiểm kho")
            </th>
            <th >
                @Html.DisplayName("Tên Nhân Viên")
            </th>
            <th >
                @Html.DisplayName("Ghi Chú")
            </th>          
            <th class="width-10">
                Hành động
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>@item.soPhieuKiemKho</td>
                <td>@item.ngayKiemKho.ToString("dd/MM/yyyy")</td>
                <td>@item.tenNhanVien</td>
                <td>@item.ghiChu</td>
                    
                <td>
                    <div class="btn-group" >
                        <a href="@Url.Action("Detail", new { id = item.soPhieuKiemKho })" class="btn btn-default">
                            <i class="fa fa-eye"></i> Xem
                        </a>

                        <a href="@Url.Action("Delete", new { id = item.soPhieuKiemKho })" class="btn btn-default">
                            <i class="fa fa-remove" aria-hidden="true"></i> Xóa
                        </a>
                    </div>
                </td>               
            </tr>
        }
    </tbody>
</table>

<div class="pull-left">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</div>
<div class="pull-right">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

<script src="~/Scripts/bootstrap.min.js"></script>

