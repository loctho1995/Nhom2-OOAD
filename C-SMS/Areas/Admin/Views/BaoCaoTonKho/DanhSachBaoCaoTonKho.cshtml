@using PagedList.Mvc
@model List<Common.ViewModels.BaoCaoTonKhoViewModel>

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th>
                @Html.DisplayName("Mã hàng hoá")
            </th>
            <th>
                @Html.DisplayName("Tên hàng hoá")
            </th>
            <th>
                @Html.DisplayName("Số lượng tồn đầu")
            </th>
            <th>
                @Html.DisplayName("Số lượng nhập")
            </th>
            <th>
                @Html.DisplayName("Số lượng xuất")
            </th>
            <th>
                @Html.DisplayName("Số lượng tồn cuối")
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>@item.maHangHoa</td>
                <td>@item.tenHangHoa</td>
                <td>@item.soLuongTonDau</td>
                <td>@item.soLuongNhap</td>
                <td>@item.soLuongXuat</td>
                <td>@item.soLuongTonCuoi</td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/bootstrap.min.js"></script>

