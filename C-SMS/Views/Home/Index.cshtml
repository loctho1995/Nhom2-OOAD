@model IEnumerable<Common.Models.HangHoa>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

@using Common.Ultil

<div class="products">
    <h5 class="latest-product">SẢN PHẨM MỚI NHẤT</h5>
    <a class="view-all" href="product.html">XEM TẤT CẢ<span> </span></a>
</div>
<div class="product-left">
    @foreach (var item in ViewBag.hangHoaMoiNhat)
    {
        var url = "HangHoa/ChiTietSanPham/" + item.MaHangHoa;
        FormatNumber number = new FormatNumber();
        <div class="col-md-4 chain-grid grid-top-chain" style="margin-right:21px">
            <a href="@url">
                <img class="img-responsive chain" style="width:245px; height:338px" src="~/Content/client/images/@item.HinhAnh" alt=" " />
            </a>
            <a class="now-get get-cart" href="#">Thêm vào giỏ hàng</a>
            <span class="rating">
                <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                <label for="rating-input-1-5" class="rating-star1"> </label>
                <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                <label for="rating-input-1-4" class="rating-star1"> </label>
                <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                <label for="rating-input-1-3" class="rating-star"> </label>
                <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                <label for="rating-input-1-2" class="rating-star"> </label>
                <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                <label for="rating-input-1-1" class="rating-star"> </label>
            </span>

            <span class="star"> </span>
            <div class="grid-chain-bottom">
                <h6><a href="single.html">@item.TenHangHoa</a></h6>
                <div class="star-price">
                    <div class="">

                        <div class="left-n ">@number.FormatNumbers(@item.GiamGia.ToString()) đ</div>
                        <span class="reducedfrom">@number.FormatNumbers(@item.GiaBan.ToString()) đ</span>

                        @*<span class="actual">@number.FormatNumbers(@item.GiaKhuyenMai.ToString()) VND</span>
                        <br />

                        <span class="reducedfrom">@number.FormatNumbers(@item.GiaBan.ToString()) VND</span>*@
                    </div>
                </div>
            </div>
        </div>
    }
</div>